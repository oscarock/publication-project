<!DOCTYPE html>
<html>
  <head>
    <title>PublicationProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "style", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "sidebar", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "toastr.min", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "pagination", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%= render 'partials/messages' %>
  <%= render partial: "partials/sidebar" %>
  <%= yield %>

  <%= javascript_include_tag("jquery") %>
  <%= javascript_include_tag("jquery.nanoscroller.min") %>
  <%= javascript_include_tag("sidebar") %>
  <%= javascript_include_tag("toastr.min") %>
  <%= javascript_include_tag("toastr.init") %>
  </body>
</html>
